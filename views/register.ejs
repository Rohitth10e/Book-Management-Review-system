<%- include('partials/header') %>



<div id="register" class="container-fluid">
    <div class="reg-banner">
      <div class="logo">
        <h3>BookNotes</h3>
      </div>
      <div class="reg-banner-txt">
        <h1>Hey there!</h1>
        <p>Register to get started</p>
      </div>
      <div class="reg-banner-foot">
          <p>Already have an account?</p>
          <form action="/login" method="get" class="get-login">
              <button type="submit">Login</button>
          </form>
      </div>
    </div>
    <form action="/register" method="post" id="register-form">
      <label for="username" class="label username-label">
          <span class="material-symbols-outlined icon"> person </span>
        <input
          type="text"
          name="username"
          placeholder="username"
          autocomplete="off"
          required
        />
      </label>
      <label for="email" class="label email-label">
          <span class="material-symbols-outlined icon">
              mail
              </span>
        <input type="email" name="email" placeholder="email" autocomplete="off" required/>
      </label>
      <!-- <label for="phno" class="label phno-label">
          <span class="material-symbols-outlined icon">
              call
              </span>
        <input type="number" name="phno" placeholder="phno" autocomplete="off" />
      </label> -->
      <label for="passsword" class="label passsword-label">
          <span class="material-symbols-outlined icon">
              password
              </span>
        <input
          type="password"
          name="password"
          placeholder="password"
          autocomplete="off"
          required
        />
      </label>
      <button type="submit">Register</button>
    </form>
  </div>

<%- include('partials/footer') %>